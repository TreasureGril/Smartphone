<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homework10"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RecyclerStaggeredActivity" android:exported="true"></activity>
        <activity android:name=".RecyclerLinearActivity" android:exported="true"/>
        <activity android:name=".RecyclerGridActivity" android:exported="true"/>
        <activity
            android:name=".ViewFlipperActivity"
            android:exported="true" />
        <activity
            android:name=".ToolbarActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity android:name=".TabThirdActivity"  android:exported="true"/>
        <activity android:name=".TabSecondActivity" android:exported="true"/>
        <activity
            android:name=".TabFragmentActivity"
            android:exported="true" />
        <activity android:name=".TabFirstActivity" />
        <activity
            android:name=".TabLayoutActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".SearchViewActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".SearchResultActvity"
            android:theme="@style/AppCompatTheme">
           <intent-filter>
               <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
              android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".OverflowMenuActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".BannerPagerActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>